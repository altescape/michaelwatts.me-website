---
const { url, title, date, isActive } = Astro.props;

const formattedDate = date
  ? new Date(date).toLocaleDateString("en-gb", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  : null;
---

<li
  class="flex flex-col mb-3 last:border-none last:mb-0 last:pb-0 xl:flex-row xl:justify-between xl:items-baseline leading-tight"
>
  <a href={url} class="block w-full hover:underline">{title}</a>
  <time class="shrink text-xs text-nowrap xl:pl-5 mt-2 text-sm"
    >{formattedDate}</time
  >
</li>
