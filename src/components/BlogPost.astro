---
const { url, title, date, isActive } = Astro.props;

const formattedDate = date
  ? new Date(date).toLocaleDateString("en-gb", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  : null;
---

<li
  class="prose dark:prose-invert flex mb-5 flex-row md:flex-col xl:flex-row xl:justify-between items-baseline"
>
  <a
    href={url}
    class="font-bold block w-full no-underline hover:underline leading-tight"
    >{title}</a
  >
</li>
