---
const { href, isActive } = Astro.props;

const activeClassList = isActive
  ? "active bg-zinc-100 dark:bg-zinc-400 dark:text-zinc-900"
  : "";
---

<a
  href={href}
  class:list={[activeClassList]}
  class="prose dark:prose-invert mx-2 rounded py-2 px-4 font-bold no-underline hover:no-underline transition-colors hover:bg-zinc-100 hover:dark:bg-zinc-400 hover:dark:text-zinc-900"
>
  <slot />
</a>
