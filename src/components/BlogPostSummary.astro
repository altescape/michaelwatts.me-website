---
const { url, title, date, description } = Astro.props;

const formattedDate = date
  ? new Date(date).toLocaleDateString("en-gb", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  : null;
---

<a
  href={url}
  class="group block pb-5 mb-5 border-b border-secondary-200 dark:border-secondary-800 rounded-sm !no-underline"
>
  <article class="flex flex-col">
    <div class="flex justify-between items-baseline mb-2">
      <h3
        class="transition-colors m-0 prose prose-2xl dark:prose-invert group-hover:text-brand-400 group-hover:underline"
      >
        {title}
      </h3>
      <time class="prose prose-sm dark:prose-invert group-hover:text-brand-400">
        {formattedDate}
      </time>
    </div>
    <p
      class="m-0 prose dark:prose-invert group-hover:text-brand-950 group-hover:dark:text-brand-200"
    >
      {description}
    </p>
  </article>
</a>
