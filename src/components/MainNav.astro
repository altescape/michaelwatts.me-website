---
import MainNavLink from "./MainNavLink.astro";

const title = "Michael Watts";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<style>
  .main-nav .logo:before {
    content: "";
    background-image: url(data:image/jpeg;base64,);
  }
</style>

<header
  class="main-nav flex justify-between items-center h-24 p-5 mw-border-b mw-bg-2"
  role="banner"
>
  <a
    href="/"
    class="logo text-brand-950 dark:text-brand-50 visited:text-brand-950 visited:dark:text-brand-50 flex items-center relative pl-12 text-xl font-bold transition-colors before:w-9 before:h-9 before:rounded-full before:bg-cover before:absolute before:left-0 hover:no-underline"
  >
    {title}
  </a>
  <a
    href="#main"
    class="sr-only ml-3 px-2 focus:static focus:w-auto focus:h-auto focus:overflow-visible"
    >Skip to main content</a
  >

  <div class="flex-1"></div>

  <ul role="navigation" class="flex list-none m-0 p-0">
    <li>
      <MainNavLink href="/" isActive={currentPath === ""}>Home</MainNavLink>
    </li>
    <li
      class={currentPath === "tips" || currentPath.includes("posts")
        ? "active underline font-bold mx-2"
        : "font-bold mx-2"}
    >
      <MainNavLink
        href="/tips"
        isActive={currentPath === "tips" || currentPath.includes("posts")}
      >
        Tips
      </MainNavLink>
    </li>
    <li class="font-bold mx-2">
      <MainNavLink href="/rss.xml">RSS</MainNavLink>
    </li>
  </ul>

  <div class="ml-3">
    <toggle-theme></toggle-theme>
  </div>
</header>
