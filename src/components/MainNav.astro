---
const title = "Michael Watts";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<style>
  .main-nav {
    --avatar: url(data:image/jpeg;base64,);
  }

  .main-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .main-nav .logo {
    display: flex;
    align-items: center;
    position: relative;
    padding-left: 50px;
  }

  .main-nav .logo:before {
    content: "";
    background-image: var(--avatar);
    background-size: 100%;
    width: 40px;
    height: 40px;
    position: absolute;
    left: 0;
    border-radius: 20px;
  }

  .main-nav .logo img {
    margin-right: 0.75rem;
    border-radius: 20px;
  }

  .main-nav .logo a {
    color: inherit;
  }

  .main-nav .logo a:hover {
    text-decoration: underline;
  }

  .main-nav .logo.title {
    font-size: 1.25rem;
    font-weight: bold;
    text-decoration: none;
    color: inherit;
  }

  .sr-only {
    position: absolute;
    left: -10000px;
    top: auto;
    width: 1px;
    height: 1px;
    overflow: hidden;
  }

  .sr-only:focus {
    position: static;
    width: auto;
    height: auto;
    overflow: visible;
  }

  .main-nav ul {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .main-nav ul li {
    margin: 0 0.5rem;
    font-weight: bold;
  }

  .main-nav .logo.title,
  .main-nav ul li a {
    text-decoration: none;
    color: inherit;
    transition: color 0.1s ease;
  }

  .main-nav .logo.title:hover,
  .main-nav ul li a:hover {
    text-decoration: underline;
    color: inherit;
  }

  .main-nav ul li.active a {
    text-decoration: underline;
    color: var(--mw-brand-lighter);
  }

  .main-nav .logo.title:hover {
    text-decoration: none;
    color: rgb(from white r g b / 0.8);
  }
</style>

<header class="main-nav" role="banner">
  <a href="/" class="logo title">
    {title}
  </a>
  <a href="#main" class="sr-only">Skip to main content</a>

  <ul role="navigation">
    <li class={currentPath === "" ? "active" : ""}>
      <a href="/">Home</a>
    </li>
    <li
      class={currentPath === "tips" || currentPath.includes("posts")
        ? "active"
        : ""}
    >
      <a href="/tips">Tips</a>
    </li>
    <li><a href="/rss.xml">RSS</a></li>
  </ul>
</header>
