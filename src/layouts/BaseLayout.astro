---
import MainNav from '../components/MainNav.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

const mainTitle = 'Michael Watts, Software Engineer';
const { pageTitle } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<title>{mainTitle} | {pageTitle}</title>
		<meta name="description" content="I'm a a software engineer from Surrey, UK, specialising in TypeScript, C#, Ruby, Rails, Node, JavaScript and HTML/CSS.">
		<link rel="stylesheet" href="https://use.typekit.net/eaq6veo.css">
	</head>
	<body>
    <MainNav />

		<section class="main" role="main">
      <slot />
		</section>

		<Footer />
	</body>
</html>
